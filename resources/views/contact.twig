{% extends 'base.twig' %}

{% block content  %}
<!-- Intro -->
<section class="site-section site-section-top site-section-light themed-background-dark">
    <div class="container">
        <h1 class="text-center animation-fadeInQuickInv"><strong>Nous sommes ici pour vous aidez.</strong></h1>
    </div>
</section>
<!-- END Intro -->

<!-- Contact -->
<section class="site-content site-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 site-block">
                <form action="{{ path_for('envoi') }}" method="post" id="form-contact">
                    <div class="form-group">
                        <label for="nom">Nom</label>
                        <input type="text" id="nom" name="nom" class="form-control input-lg" placeholder="Votre nom ...">
                    </div>
                    <div class="form-group">
                        <label for="sujet">Sujet</label>
                        <input type="text" id="sujet" name="sujet" class="form-control input-lg" placeholder="L'objet de votre message ...">
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea id="message" name="message" rows="10" class="form-control input-lg" placeholder="Comment pouvons-nous vous aidez ?"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary">Envoyer</button>
                    </div>
                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>
</section>
<!-- END Contact -->
{% endblock %}