{% extends 'base.twig' %}
{% from 'form.twig' import input, textarea, select %}

{% block content  %}
  <div class="block-title">
      <h2>Les différentes étapes de la plainte de référence {{reference}}</h2>
  </div>

  <div class="row">
      <div class="col s12 m8 l12">
        <table id="data-table-simple" class="table table-striped table-bordered table-vcenter table-hover table-condensed">
          <thead>
            <tr>
              <th>Etat</th>
              <th>Date de début</th>
            </tr>
          </thead>
          <tbody>
            {% for workflow in workflows %}   
            <tr>
              <td> {{ workflow.nom }} </td>
              <td> {{ workflow.dateCreation }} </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
  </div>
{% endblock %}