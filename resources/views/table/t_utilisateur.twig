{% extends 'base.twig' %}
{% from 'form.twig' import input, textarea, select %}

{% block content  %}
  <div class="block-title">
      <h2>Liste des utilisateurs</h2>
  </div>

  <div class="row">
      <div class="col s12 m8 l12">
        <table id="data-table-simple" class="table table-striped table-bordered table-vcenter table-hover table-condensed">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Pseudo</th>
              <th>Mail</th>
              <th>Num√©ro</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for key, utilisateur in utilisateurs %}   
            <tr>
              <td> {{ utilisateur.nom }} </td>
              <td> {{ utilisateur.login }} </td>
              <td> {{ utilisateur.email }} </td>
              <td> {{ utilisateur.numero }} </td>
              <td> 
