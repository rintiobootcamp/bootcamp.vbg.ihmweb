                    <li><a href="{{ path_for('utilisateur.show')~'?id='~utilisateur.id }}" class="-text">Modifier</a>
                    </li>
                    <li><a href="#!" class="-text">Supprimer</a>
                    </li>
                  </ul>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
  </div>
{% endblock %}